@{
}

@model IEnumerable<EcommerceShoppingApp.Models.Product>

<div class="col-md-12">
    <div class="col-sm-12 mt-5 mb-2" style="text-align:right;">
        <a asp-controller="Admin" asp-action="AddProduct" class="btn btn-primary">Add Product</a>
    </div>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th> ID</th>
                <th>
                   Name
                </th>
                <th>
                    Image
                </th>
                <th>
                   Description
                </th>
                <th>
                   Price
                </th>
                <th>Action</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row"> @Html.DisplayFor(modelItem => item.pId)</th>
                    <td> @Html.DisplayFor(modelItem => item.pName)</td>
                    <td><img src="../products/@item.pImg" width="100" heigth="100" /></td>
                    <td> @Html.DisplayFor(modelItem => item.pDesc)</td>
                    <td> @Html.DisplayFor(modelItem => item.pPrice)</td>
                    <td>
                        <a href="@Url.Action("EditProduct","Admin",item)">Edit</a>
                        <a href="@Url.Action("DeleteProduct","Admin",item)">Delete</a>

                    </td>
                </tr>
            }
    </tbody>
</table>
</div>
